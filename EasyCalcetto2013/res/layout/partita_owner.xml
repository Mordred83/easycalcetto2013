<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/camp_vetro"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="529dp"
            android:baselineAligned="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/label_Owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/partita_label_Owner"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/field_Owner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/red"
                        android:textSize="25dp"
                        android:textStyle="italic" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1.53"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="0.00"
                    android:background="@drawable/layout_border"
                    android:gravity="center_vertical|center_horizontal" >

                    <TextView
                        android:id="@+id/label_Confermati"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/partita_label_Confermati"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/field_Confermati"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:paddingLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/red"
                        android:textSize="25dp" />

                    <ImageView
                        android:id="@+id/buttonViewPlayers"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.07"
                        android:src="@drawable/view_confirmed" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.00" >

                    <EditText
                        android:id="@+id/field_Nome"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Nome partita"
                        android:inputType="textPersonName"
                        android:maxWidth="300dp"
                        android:textColor="@color/red"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp" >

                    <EditText
                        android:id="@+id/field_Luogo"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPostalAddress" android:maxWidth="300dp" android:layout_marginLeft="5dp" android:textColor="@color/red" android:textSize="20dp" android:hint="Luogo della partita">

                        <requestFocus />
                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.00" android:layout_marginBottom="10dp" android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/field_Date"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.00"
                        android:text="gg/mm/aaaa" android:textColor="@color/red" android:textSize="20dp" android:gravity="center_vertical|center_horizontal"/>

                    <Button
                        android:id="@+id/buttonChangeDate"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.00"
                        android:text="Cambia Data" android:layout_marginLeft="15dp" android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:gravity="left|center_vertical" android:layout_gravity="left" android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/field_StartHour"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:hint="ora1"
                        android:paddingLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/red"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/buttonChangeHour"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="Ora di inizio" android:textColor="@color/black" android:layout_marginLeft="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical|center_horizontal" >

                    <Button
                        android:id="@+id/buttonSaveValue"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/label_button_changeValue" android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
 <com.google.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
        android:id="@+id/ad"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:adSize="BANNER"
        app:adUnitId="a15196004307e8f" android:layout_gravity="center_vertical|center_horizontal">
    </com.google.ads.AdView>
</RelativeLayout>